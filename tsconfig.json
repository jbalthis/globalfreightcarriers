{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "styles/*.ts",
    "components/*.tsx",
    "lib/*.ts",
    "types/*.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/*/*.tsx",
    "app/(public)/components/*.tsx",
    "app/(protected)/*.tsx",
    "app/(protected)/*/*.tsx",
    "providers/*.tsx"
  ],
  "exclude": ["node_modules"]
}
